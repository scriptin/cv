{
  "$schema":  "https://raw.githubusercontent.com/jetify-com/devbox/0.13.6/.schema/devbox.schema.json",
  "packages": ["typst@latest"],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "watch": [
        "mkdir build",
        "typst watch --font-path src/fonts src/main.typ build/Dmitry_Shpika_CV.pdf"
      ]
    }
  }
}
